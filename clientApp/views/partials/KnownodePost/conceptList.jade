#subjectList
    h2 Current Concepts
    dl(ng-repeat="concept in conceptList")
        dt
            a(href="/concept/{{concept.conceptId}}") {{concept.title}}
        dd {{concept.content}}
    a(class='btn btn-success', href='/addConcept', ng-show='isUserLoggedIn') Add your own new concept

div.subheader
  div.span23.offset1
    h2.subheader Current Concepts
    span.btn.btn-link.sort sort:
    div.btn-group(data-toggle="buttons-radio")
      button.btn.btn-link.active-red(type="button", ng-click="orderProp='date'") New
      button.btn.btn-link(type="button", ng-click="orderProp='votes'") Popular
      button.btn.btn-link(type="button", ng-click="orderProp='hotRank'") Hot
  div(ng-repeat="concept in conceptList | orderBy:orderProp").span11.offset1
    include knownode


