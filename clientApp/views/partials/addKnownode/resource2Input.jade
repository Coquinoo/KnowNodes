div.resourceInput(ng-controller="FormCtrl")
  form.form-horizontal.span12.offset1
    ul.nav.nav-tabs(data-toggle="buttons-radio").span10
      li(ng-repeat="step in steps", ng-class="{active: $index==getCurrentStepIndex()}")
        a(href="javascript:void(0)", ng-click="goToStep($index)") {{step}}
  div.map.span1
    img(src="img/nodeGrey.png")
  div(ng-switch="selection").span11
    div(ng-switch-when="Text")
      div.control-group
        label.control-label(for="title2").span2 Title
        div
          input(type="text", id="title2", placeholder="Enter title here").span9
      div.control-group
        label.control-label(for="body2").span2 Body
        div.controls
          textarea(rows="2", id="body2", placeholder="Enter additional text here(optional)").span9
      div.control-group
        div.controls
          button.btn.knowledgeButton.pull-right.span3(ng-click="showKnowledgeDomain= toggleKnowledgeDomain('show')") Choose domain
          include resourceTypeSelector
          include knowledgeDomain



    div(ng-switch-when="URL")
      div.control-group
        label.control-label(for="title2").span2 URL
        div.controls
          input(type="text", id="title2", placeholder="Paste URL here").span9
      div.control-group
        label.control-label(for="title2").span2 Title
        div.controls
          input(type="text", id="title2", placeholder="Enter title here").span9
      div.control-group
        label.control-label(for="body2").span2 Body
        div.controls
          textarea(rows="2", id="body2", placeholder="Enter additional text here(optional)").span9
      div.control-group
        div.controls
          button.btn.knowledgeButton.pull-right.span3(ng-click="showKnowledgeDomain= toggleKnowledgeDomain('show')") Choose domain
          include resourceTypeSelector
          include knowledgeDomain
    div(ng-switch-when="PDF")
        div.control-group
          label.control-label(for="file2").span2 PDF
          div.controls
            input.input-file(type='file', id="file2").span9
        div.control-group
          label.control-label(for="title2").span2 Title
          div.controls
            input(type="text", id="title2", placeholder="Enter title here").span9
        div.control-group
          label.control-label(for="body2").span2 Body
          div.controls
            textarea(rows="2", id="body2", placeholder="Enter additional text here(optional)").span9
        div.control-group
          div.controls
            button.btn.knowledgeButton.pull-right.span3(ng-click="showKnowledgeDomain= toggleKnowledgeDomain('show')") Choose domain
            include resourceTypeSelector
            include knowledgeDomain
