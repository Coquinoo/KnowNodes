div.knownode.span12
  div.resource.row
    .map.span1
      a(href="/concept/relatedTo/{{concept.conceptId}}")
        img(src="/img/node.png").node
    div.content.span10
      a.title(href="/concept/relatedTo/{{concept.conceptId}}") {{concept.title}}
      a(href="http://en.wikipedia.org/wiki/Concept", target="_blank")
        img(src="/img/openInNewWindow.png", width="18px")
      div.lineSeperator
      p.body
        span
          small {{concept.content}}
      p.tagLine
        p.knowledgeDomain
          small test {{concept.knowledgeDomain}}
        span.resourceType
          small [ test {{concept.resourceType}} ]&nbsp;

    div
      a.addButton.clicker(href='/addPostURL/{{conceptId}}', tooltip="Connect a knownode to this resource")
        img(src="/img/addIcon.png", width="20px", class="example"))

